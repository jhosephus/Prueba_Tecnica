<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/nuevaTareaDialog_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo"/>

    <EditText
        android:id="@+id/nuevaTareaDialog_contenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contenido"
        android:layout_below="@+id/nuevaTareaDialog_titulo"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/nuevaTareaDialog_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finaliza (dd/mm/yyyy)"
        android:textSize="17sp"
        android:layout_below="@id/nuevaTareaDialog_contenido"
        android:layout_marginTop="12dp"/>

</RelativeLayout>